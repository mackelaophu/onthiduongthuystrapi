{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "Question",
    "description": "Câu hỏi trắc nghiệm"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "questionText": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "level": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::question-level.question-level",
      "inversedBy": "questions"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::question-category.question-category",
      "inversedBy": "questions"
    },
    "answers": {
      "type": "component",
      "repeatable": true,
      "component": "quiz.answer",
      "required": true
    },
    "tip": {
      "type": "richtext"
    }
  }
}
